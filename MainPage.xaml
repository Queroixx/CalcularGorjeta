<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">

    <VerticalStackLayout>
        <Label Text="Total da Conta" />
        <Entry x:Name="billInput" Placeholder="Insira o valor" Keyboard="numeric" />
        <Label Text="Gorjeta" />
        <Label x:Name="tipOutput" Text="0.00" />

        <Label Text="Total" />
        <Label x:Name="totalOutput" Text="0.00"/>

        <Label Text="Porcentagem da Gorjeta" />
        <Label x:Name="tipPercent" Text="15%" />
        <Slider x:Name="tipoPecentSlider" Minimum="0" Maximum="100" Value="15" />

        <Button Text="15%"  />
        <Button Text="20%"  />

        <Button x:Name="roundDown" Text="Arredondar para baixo" />
        <Button x:Name="roundUp" Text="Arredondar para cima" />

    </VerticalStackLayout>


</ContentPage>
